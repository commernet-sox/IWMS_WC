<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
  <targets async="true">
    <!-- write logs to file -->
    <target name="file" xsi:type="AsyncWrapper">
      <target xsi:type="File" 
                  fileName="${basedir}/logs/${shortdate}/${cached:${date:format=yyyy-MM-dd HH_mm_ss}}.log"
          maxArchiveFiles="9"
            archiveEvery="Hour"
            archiveNumbering="Sequence"
      layout="${longdate} ${level:uppercase=true} ${event-context:item=Action} ${message} ${event-context:item=Amount} ${stacktrace}${newline}exception:${exception:format=tostring}${newline}"

      />
    </target>
  </targets>
  <rules>
    <!--DEBUG,INFO,WARN,ERROR,FATAL-->
    <logger name="*" minlevel="Error" writeTo="file" />
  </rules>
</nlog>